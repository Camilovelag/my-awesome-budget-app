<main>
  <h1>Transactions</h1>
  <p>
    Total ammount:
    <%= total_amount_per_transaction(@entities) %>
  </p>
  <ul>
    <% @entities.each do |entity| %>
      <li>
        <p>
          <%= entity.name %>
        </p>
        <p>
          <%= number_to_currency(entity.amount) %>
        </p>
      </li>
    <% end %>
  </ul>
  <%= button_to 'Add a new transaction', new_group_entity_path, method: :get %>
  <%= button_to '<', groups_path, method: :get %>
</main>
